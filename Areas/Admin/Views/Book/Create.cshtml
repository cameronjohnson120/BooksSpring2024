@model BookWithCategoriesVM

<h1>Add New Book</h1>

<div class="border col-md-10">

    <form asp-action="Create" enctype="multipart/form-data"> @* tells the compiler that within this form there is a file that will be uploaded *@

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group m-4">
            <label asp-for="Book.BookTitle" class="control-label"></label>
            <input asp-for="Book.BookTitle" class="form-control" />
            <span asp-validation-for="Book.BookTitle" class="text-danger"></span>
        </div>

        <div class="form-group m-4">
            <label asp-for="Book.Author" class="control-label"></label>
            <input asp-for="Book.Author" class="form-control" />
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>

        @* input for description *@
        <div class="form-group m-4">
            <label asp-for="Book.Description" class="control-label"></label>
            <input asp-for="Book.Description" class="form-control" />
            <span asp-validation-for="Book.Description" class="text-danger"></span>
        </div>

        @* input for book price *@
        <div class="form-group m-4">
            <label asp-for="Book.Price" class="control-label"></label>
            <input asp-for="Book.Price" class="form-control" />
            <span asp-validation-for="Book.Price" class="text-danger"></span>
        </div>



        @* input for category *@
        <div class="form-group m-4">
            <label asp-for="Book.CategoryID" class="control-label"></label>
            <select  class="form-control" asp-items="@Model.ListOfCategories">
                <option disabled selected>Select a category</option>
            </select>
            <span asp-validation-for="Book.CategoryID" class="text-danger"></span>
        </div>

        @* input for an image file  *@
         <div class="form-group m-4">
            <label asp-for="Book.ImgURL" class="control-label"></label>
            <input type="file" name="imgFile" asp-for="Book.ImgURL" class="form-control" />

        </div>

        @* submit button *@
        <div class="form-group m-4">
            <input type="Submit" value="Add New Book" class="form-control btn btn-primary" />
        </div>

    </form>

    @section Scripts
    {
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }

</div>



